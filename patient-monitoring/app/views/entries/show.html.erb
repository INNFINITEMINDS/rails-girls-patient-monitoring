<div class="container">
<h1>Entries</h1>
<div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><p> <%= @entry.title %> </p></h3>
      </div>
      <div class="panel-body">
        <p> <%= "Created at: " + @entry.entry_date.to_formatted_s(:short) %> </p>
        <p> <%= "Entry type: " + @entry.entry_type %> </p>
        <p> <%= "Content: " + @entry.content %> </p>
        <p> <%= "Case: " + Case.find(@entry.case_id).title %> </p>
          </div>
      <div class="panel-footer">
        <span class="label label-default"><%= "Created by: " + User.find(@entry.user_id).email %></span>
      </div>
    </div>
  </div>
